@using Actividad4LengProg3.Models
@model IEnumerable<EstudiantesViewModel>
@{
    ViewData["Title"] = "Estudiantes";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h2 class="mb-0">Estudiantes</h2>
        <small class="text-muted">Listado en memoria</small>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Registrar" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-clockwise"></i> Actualizar
        </a>
    </div>
</div>

@await Html.PartialAsync("_Alerts")

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row g-2 align-items-center mb-3">
            <div class="col-12 col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input id="txtBuscar" type="text" class="form-control" placeholder="Buscar por nombre, matrícula, carrera o recinto...">
                </div>
            </div>
            <div class="col-12 col-md-6 text-md-end">
                <span class="text-muted" id="lblResumen"></span>
            </div>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info mb-0">
                No hay estudiantes registrados aún.
                <a asp-action="Registrar" class="alert-link">Agregar el primero</a>.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table id="tblEstudiantes" class="table table-sm table-hover align-middle">
                    <thead class="table-light position-sticky top-0">
                        <tr>
                            <th style="width:72px;">ID</th>
                            <th>Nombre</th>
                            <th>Matrícula</th>
                            <th>Carrera</th>
                            <th>Recinto</th>
                            <th class="d-none d-md-table-cell">Correo</th>
                            <th class="d-none d-lg-table-cell">Celular</th>
                            <th class="d-none d-xl-table-cell">Teléfono</th>
                            <th class="d-none d-xl-table-cell">Dirección</th>
                            <th>F. Nac.</th>
                            <th>Género</th>
                            <th>Turno</th>
                            <th>Beca</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@item.id</span></td>
                                <td class="fw-semibold">@item.Nombre_Completo</td>
                                <td><code>@item.Matricula</code></td>
                                <td>@item.Carrera</td>
                                <td>@item.Recinto</td>
                                <td class="d-none d-md-table-cell">
                                    <a href="mailto:@item.Correo_Institucional">@item.Correo_Institucional</a>
                                </td>
                                <td class="d-none d-lg-table-cell">@item.Celular</td>
                                <td class="d-none d-xl-table-cell">@item.Telefono</td>
                                <td class="d-none d-xl-table-cell text-truncate" style="max-width: 260px;">
                                    @item.Direccion
                                </td>
                                <td>
                                    @* Formato corto de fecha si tiene valor *@
                                    @{
                                        string fecha = item.Fecha_Nacimiento == default ? "" : item.Fecha_Nacimiento.ToString("dd/MM/yyyy");
                                    }
                                    @fecha
                                </td>
                                <td>@item.Genero</td>
                                <td>@item.Turno</td>
                                <td>
                                    @if (item.Becado)
                                    {
                                        <span class="badge bg-success">Sí</span>
                                        <div class="progress mt-1" style="height:6px; width:90px;">
                                            <div class="progress-bar" role="progressbar" style="width:@item.porcentaje_Beca%"></div>
                                        </div>
                                        <small class="text-muted">@item.porcentaje_Beca%</small>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.id" class="btn btn-outline-primary" title="Ver">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Matricula" class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Matricula" class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        /* Fija el encabezado de la tabla y mejora legibilidad */
        #tblEstudiantes thead th {
            position: sticky; top: 0; z-index: 1;
        }
        /* Truncado elegante en celdas con textos largos */
        .text-truncate { max-width: 260px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
    </style>
}

@section Scripts {
    <script>
        (function () {
            const input = document.getElementById('txtBuscar');
            const table = document.getElementById('tblEstudiantes');
            const rows = table ? table.querySelectorAll('tbody tr') : [];
            const lbl = document.getElementById('lblResumen');

            function normalizar(txt) {
                return (txt || '')
                    .toString()
                    .toLowerCase()
                    .normalize('NFD').replace(/[\u0300-\u036f]/g, '');
            }

            function filtrar() {
                const q = normalizar(input.value);
                let visibles = 0;

                rows.forEach(tr => {
                    const texto = normalizar(tr.innerText);
                    const show = !q || texto.includes(q);
                    tr.style.display = show ? '' : 'none';
                    if (show) visibles++;
                });

                const total = rows.length;
                lbl.textContent = total ? `Mostrando ${visibles} de ${total}` : '';
            }

            if (input && rows.length) {
                input.addEventListener('input', filtrar);
                filtrar(); // estado inicial
            }
        })();
    </script>
}
